                        <li><a href="{{ path('tasks') }}">Inicio</a></li>
                        <li><a href="{{ path('my_tasks') }}">Mis tareas</a></li>
                        <li><a href="{{ path('task_create') }}">Crear tarea</a></li>
                        <li class="right"><a href="{{ path('logout') }}">Cerrar sesi√≥n</a></li>
                        <li class="right"><a href="{{ path('tasks') }}">{{ app.user.name ~ '' ~ app.user.surname }}</a></li>  
                    {% else %}
                        <li><a href="{{ path('login') }}">Login</a></li>                    
                        <li><a href="{{ path('registro') }}">Registro</a></li>     
                    {% endif %}

                </ul>     
           </div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
